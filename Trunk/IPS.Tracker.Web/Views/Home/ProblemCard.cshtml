@model IPS.Tracker.Web.TrackerService.DefectDTO

<div class="problem-card @Model.PriorityClass">
    <div>
        <small>
            @Html.ActionLink(Model.Id.ToString(), "Details", new { id = Model.Id }, new { @class = "btn btn-xs btn-default" })
        </small>
    </div>
    <div>
        @Model.Summary
    </div>
    <div class="problem-details">
        <div>
            <small title="@Model.WorkOrderName">
                @if (!string.IsNullOrEmpty(Model.WorkOrderName))
            {
                    @Model.WorkOrderName.Substring(0, Math.Min(30, Model.WorkOrderName.Length))
                }
                else
                {
                    <text>-</text>
                }
            </small>
        </div>
        <div>
            <small class="text-info" title="@Model.AssigneeName">
                @Html.ActionLink(@Model.AssigneeInitials, "ListProblemsByUser", new { userId = Model.AssigneeId })
            </small>
        </div>
    </div>
</div>
