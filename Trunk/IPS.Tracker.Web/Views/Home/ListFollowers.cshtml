@model List<IPS.Tracker.Web.TrackerService.WorkerDTO>

@if (Model.Count > 0)
{
    <div id="followers">
        <strong>Followed by:</strong>

        <ul class="list-inline">
            @foreach (var item in Model)
            {
                <li>
                    <small>@Html.DisplayFor(modelItem => item.Name)</small>
                </li>
            }
        </ul>
    </div>
}