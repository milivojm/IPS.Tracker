@model List<IPS.Tracker.Web.TrackerService.DefectFollowerDTO>

@if (Model.Count > 0)
{
    <div id="followers">
        <strong>Zadatak prate</strong>

        <ul class="list-inline">
            @foreach (var item in Model)
            {
                <li>
                    <small>@Html.DisplayFor(modelItem => item.FollowerName)</small>
                </li>
            }
        </ul>
    </div>
}